<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#555555">
        <image.SmartImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="18dp"
            android:src="@mipmap/ahn"
            android:scaleType="centerCrop"
            android:id="@+id/siv"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="14dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精品歌单 "
                    android:textColor="@android:color/white"
                    android:textSize="20dp"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/acb"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="干了这碗酒 | 今夜你我都是江湖人"
                android:layout_marginBottom="6.67dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="你的心中是否也曾有一个江湖梦" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="9dp">
        <LinearLayout
            android:layout_width="84dp"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:background="@drawable/playlist_sel"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部歌单"
                android:textSize="11dp"
                android:layout_marginRight="8dp"
                android:textColor="@android:color/black"/>
            <ImageView
                android:layout_width="6dp"
                android:layout_gravity="center_vertical"
                android:layout_height="12dp"
                android:background="@mipmap/acb"/>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欧美"
            android:layout_marginRight="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="民谣"
            android:layout_marginRight="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="轻音乐"
            android:layout_marginRight="9dp"/>
    </LinearLayout>
</LinearLayout>